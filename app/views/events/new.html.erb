<h1>New Event</h1>

<%= form_for @event do |f| %>
  <%= f.label :home_team, "Home Team" %><br />
  <%= f.text_field :hometeam %>
  <br />

  <%= f.label :opponent, "Opponent" %><br />
  <%= f.text_field :visitor %>
  <br />

  <%= f.label :date, "Date" %><br />
  <%= f.text_field :date %>

  <br />
  <%= f.submit "Save" %>
<% end %>
